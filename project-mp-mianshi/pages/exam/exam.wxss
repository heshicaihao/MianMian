.page-exam {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
  background: #fff;
}

.bgImage {
  width: 200px;
  height: 160px;
  position: absolute;
  top: 20%;
  left: 25%;
}

/*tag title */

.tag-name {
  padding: 20rpx 50rpx;
  font-size: 34rpx;
  color: #000;
  border-top: 2rpx solid #eaeaea;
  font-weight: bold;
  background-color: #f7f7f7;
}

/*swiper area  */

.main-swiper {
  flex: 1;
  margin-bottom: 55px;
}

.main-swiper  .swiper-item {
  display: flex;
  flex-direction: column;
}

/* title  */

.swiper-item .fixed-box {
  flex: none;
  padding: 0 40rpx 30rpx;
  background-color: #fff;
}

.fixed-box .question {
  position: relative;
  padding-top: 30rpx;
}

.question .question-title {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.question .question-tag {
  padding: 20rpx 0 0;
  display: flex;
}

.question .question-tag .tag {
  border-radius: 5px;
  font-size: 28rpx;
  padding: 2px 12px;
}

.question .question-tag .company {
  padding: 2px 10px;
  margin-right: 20rpx;
  border: 1px solid #52c4f0;
  color: #52c4f0;
}

.question .question-tag .grade {
  border: 1px solid #2dcaab;
  color: #2dcaab;
}

/* scroll option answer  */

.swiper-item .scroll-view {
  flex: 1 1 auto;
  height: 100%;
  overflow-y: auto;
}

.scroll-view  .option-content {
  display: flex;
  width: 100%;
  font-size: 32rpx;
}

.option-answer, .checkbox-answer {
  padding: 10rpx 10rpx 10rpx 40rpx;
}

.scroll-view .option-answer {
  display: flex;
  flex-direction: column;
}

.scroll-view label {
  display: flex;
  margin-bottom: 20rpx;
}

.option-content .mark-ico {
  width: 22px;
  height: 22px;
  margin-right: 20rpx;
  text-align: center;
}

.option-content .mark-ico .code {
  border: 1px solid #999;
  border-radius: 50%;
  display: inline-block;
  width: 21px;
  height: 21px;
  font-size: 30rpx;
}

.option-content .img {
  font-size: 0;
  width:200rpx;
}

.option-content .img .selection-image {
  width: 100%;
  margin-top: 10rpx;
}

.exam-btn {
  display: inline-block;
  line-height: 2;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 6rpx;
  background: -webkit-linear-gradient(left, #50c4ee, #2dc9c9);
}
checkbox-group {
  margin-bottom: 30rpx;
}
.checkbox-answer .option-content {
  margin-top: 7rpx;
}

.checkbox-answer .check-box {
   margin-left: -100%; 
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #d5d5d5;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 42rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/*solution  */

.solution .detail .exam-btn {
  margin-top: 12rpx;
  font-size: 32rpx;
  line-height: 2;
  padding: 0 20rpx;
}

/*分割线  */

.line {
  width: 100%;
  margin-top: 30rpx;
  background-color: #eaeaea;
  height: 2rpx;
}

/* scroll区域  */

.scroll-box {
  /* height: 830rpx; */
  background: #fff;
}

/* 简答  */

.scroll-box .buttons {
  display: flex;
  padding: 40rpx 40rpx 0;
}

.buttons .answer-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 6rpx;
  background: -webkit-linear-gradient(left, #50c4ee, #2dc9c9);
}

