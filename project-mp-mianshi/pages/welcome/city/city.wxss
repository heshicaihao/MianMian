page,.page {
  height: 100%;
  background-color: #f7f7f7;
}
.title {
  line-height: 3;
  padding:0 30rpx;
  color: #999;
  font-size: 36rpx;
}
.citys {
  position: relative;
  padding:0 25rpx 30rpx;
}
.citys .city-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.city-list .item {
  width: 30%;
  line-height: 3;
  margin-bottom: 20rpx;
  font-size:30rpx;
  text-align: center;
  border-radius: 4rpx;
  border: 2rpx solid #e1e1e1;
  background-color: #fff;
}
.city-list .item.active {
  color: #fff;
  background-image:linear-gradient(135deg, #94d8f3 0%, #7ddcda 100%);
}